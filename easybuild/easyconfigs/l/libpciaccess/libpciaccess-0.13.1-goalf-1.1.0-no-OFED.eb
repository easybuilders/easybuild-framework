name = 'libpciaccess'
version = '0.13.1'

homepage = 'http://cgit.freedesktop.org/xorg/lib/libpciaccess/'
description = """Generic PCI access library."""

sourceURLs = ['http://cgit.freedesktop.org/xorg/lib/libpciaccess/snapshot']
sources = ['%s-%s.tar.gz' % (name, version)]

toolkit = {'name': 'goalf', 'version': '1.1.0-no-OFED'}

preconfigopts = './autogen.sh && '

sanityCheckPaths = {
                    'files': ['include/pciaccess.h', 'lib/libpciaccess.a'],
                    'dirs': ['lib/pkgconfig']
                   }


osdependencies = ['xorg-x11-util-macros']

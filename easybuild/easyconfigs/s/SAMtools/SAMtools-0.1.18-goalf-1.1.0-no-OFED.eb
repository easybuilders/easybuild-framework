name = 'SAMtools'
version = '0.1.18'

homepage = 'http://samtools.sourceforge.net/'
description = """SAM (Sequence Alignment/Map) format is a generic format
for storing large nucleotide sequence alignments."""

toolkit = {'name': 'goalf', 'version': '1.1.0-no-OFED'}
toolkitopts = {'optarch': True, 'pic': True}

sources = ['%s-%s.tar.bz2' % (name.lower(), version)]
sourceURLs = [('http://sourceforge.net/projects/samtools/files/%s/%s' % (name.lower(), version), 'download')]

sanityCheckPaths = {
                    'files': ['bin/vcfutils.pl',
                              'bin/bcftools',
                              'bin/blast2sam.pl',
                              'bin/bowtie2sam.pl',
                              'bin/export2sam.pl',
                              'bin/interpolate_sam.pl',
                              'bin/novo2sam.pl',
                              'bin/psl2sam.pl',
                              'bin/sam2vcf.pl',
                              'bin/samtools.pl',
                              'bin/soap2sam.pl',
                              'bin/varfilter.py',
                              'bin/wgsim_eval.pl',
                              'bin/zoom2sam.pl',
                              'bin/md5sum-lite',
                              'bin/md5fa',
                              'bin/maq2sam-short',
                              'bin/maq2sam-long',
                              'bin/wgsim',
                              'bin/seqtk',
                              'bin/samtools'],
                    'dirs': ['.']
                   }

name = 'FASTX-Toolkit'
version = '0.0.13.2'

homepage = 'http://hannonlab.cshl.edu/fastx_toolkit/'
description = """The FASTX-Toolkit is a collection of command line tools
for Short-Reads FASTA/FASTQ files preprocessing."""

toolkit = {'name': 'goalf', 'version': '1.1.0-no-OFED'}
toolkitopts = {'optarch': True, 'pic': True}

altname = '_'.join(name.split('-')).lower()
sources = ['%s-%s.tar.bz2' % (altname, version)]
sourceURLs = ['http://hannonlab.cshl.edu/%s' % altname]

dependencies = [('libgtextutils', '0.6.1')];

sanityCheckPaths = {
                    'files': ['bin/fastx_clipper',
                              'bin/fastx_trimmer',
                              'bin/fastx_quality_stats',
                              'bin/fastq_quality_converter',
                              'bin/fastq_to_fasta',
                              'bin/fastq_quality_filter',
                              'bin/fastq_quality_trimmer',
                              'bin/fastx_artifacts_filter',
                              'bin/fastx_reverse_complement',
                              'bin/fastx_collapser',
                              'bin/fastx_uncollapser',
                              'bin/fasta_formatter',
                              'bin/fasta_nucleotide_changer',
                              'bin/fastx_renamer',
                              'bin/fastq_masker',
                              'bin/fastx_barcode_splitter.pl',
                              'bin/fastx_nucleotide_distribution_graph.sh',
                              'bin/fastx_nucleotide_distribution_line_graph.sh',
                              'bin/fastq_quality_boxplot_graph.sh',
                              'bin/fasta_clipping_histogram.pl'],
                    'dirs': ['.']
                   }

name = 'Meep'
version = '1.2'

homepage = 'http://ab-initio.mit.edu/wiki/index.php/Meep'
description = """Meep (or MEEP) is a free finite-difference time-domain (FDTD) simulation software packagedeveloped at MIT to model electromagnetic systems."""

toolkit = {'name': 'goalf', 'version': '1.1.0-no-OFED'}
toolkitopts = {'usempi': True, 'opt': True, 'optarch': True, 'unroll': True}

sourceURLs = ['http://ab-initio.mit.edu/meep/',
              'http://ab-initio.mit.edu/meep/old/']
sources = ['%s-%s.tar.gz' % (name.lower(), version)]

dependencies = [
                ('Harminv', '1.3.1'),
                ('HDF5', '1.8.7', '-parallel'),
                ('libctl', '3.2.1'),
                ('GSL', '1.15'),
                ('FFTW', '3.3')
               ]

configopts = '--with-pic --with-mpi --with-blas=mkl_em64t --with-lapack=mkl_em64t --without-gcc-arch --with-libctl=$EBROOTLIBCTL/share/libctl --enable-shared'


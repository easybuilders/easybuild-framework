name = 'Bowtie2'
version = '2.0.0-beta7'

homepage = 'http://bowtie-bio.sourceforge.net/bowtie2/index.shtml'
description = """Bowtie 2 is an ultrafast and memory-efficient tool
for aligning sequencing reads to long reference sequences."""

toolkit = {'name': 'goalf', 'version': '1.1.0-no-OFED'}
toolkitopts = {'optarch': True, 'pic': True}

sources = ['%s-%s-source.zip' % (name.lower(), version)]
sourceURLs = [('http://sourceforge.net/projects/bowtie-bio/files/%s/%s' % (name.lower(), version), 'download')]
# N.B. the download option above -> required for sourceforge

sanityCheckPaths = {
                    'files': ['bin/bowtie2', 'bin/bowtie2-align', 'bin/bowtie2-build', 'bin/bowtie2-inspect' ],
                    'dirs': ['.']
                   }

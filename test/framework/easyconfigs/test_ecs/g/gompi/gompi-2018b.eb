easyblock = 'Toolchain'

name = 'gompi'
version = '2018b'

homepage = '(none)'
description = """GNU Compiler Collection (GCC) based compiler toolchain,
 including OpenMPI for MPI support."""

toolchain = SYSTEM

local_comp = ('GCC', '7.3.0-2.30')

# compiler toolchain deps
deps = [
    local_comp,
    ('OpenMPI', '3.1.1', '', local_comp),
]

env_mod_class = 'toolchain'

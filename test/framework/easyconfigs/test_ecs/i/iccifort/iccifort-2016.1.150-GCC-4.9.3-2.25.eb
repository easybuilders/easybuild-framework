# This is an easyconfig file for EasyBuild, see https://easybuilders.github.io/easybuild
easyblock = "Toolchain"

name = 'iccifort'
version = '2016.1.150'
version_suffix = '-GCC-4.9.3-2.25'

homepage = 'http://software.intel.com/en-us/intel-cluster-toolkit-compiler/'
description = """Intel Cluster Toolkit Compiler Edition provides Intel C,C++ and fortran compilers,
Intel MPI and Intel MKL"""

toolchain = SYSTEM

deps = [
    ('icc', version, version_suffix),
    ('ifort', version, version_suffix),
]

env_mod_class = 'toolchain'
